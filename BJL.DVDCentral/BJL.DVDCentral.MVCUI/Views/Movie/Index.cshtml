@model IEnumerable<BJL.DVDCentral.BL.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Message</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FormatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DirectorFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.RatingName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorFullName)
            </td>
            <td>

                    <img src="~/Images/@item.ImagePath" class="movieImg" />

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.RatingName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info mt-2 mr-2" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info mt-2 mr-2" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger mt-2 mr-2" })
                @Html.ActionLink("Add To Cart", "AddToCart", "ShoppingCart", new { id = item.Id }, new { @class = "btn btn-info mt-2 mr-2" })
            </td>
        </tr>
    }

</table>
